type int_option = int option
type lstring_list = LString.t list
type real_list = real list

type nested_option = int list option
type nested_list = LString.t option list
type nested_list_bool = bool list list

type deep_nest = int list option list
type matrix = int list list
type triple_list = LString.t list list list

type user_id = int
type user_list = user_id list
type optional_user = user_id option

let model_int_option (x: int_option) = x <> None
let model_lstring_list (x: lstring_list) = List.length x > 0
let model_real_list (x: real_list) = List.length x > 0

let model_nested_option (x: nested_option) =
  match x with
  | Some lst -> List.length lst > 0
  | None -> false

let model_nested_list (x: nested_list) = List.length x > 0
let model_nested_list_bool (x: nested_list_bool) = List.length x > 0

let model_deep_nest (x: deep_nest) = List.length x > 0
let model_matrix (x: matrix) = List.length x > 0
let model_triple_list (x: triple_list) = List.length x > 0

let model_user_id (x: user_id) = x > 0
let model_user_list (x: user_list) = List.length x > 0
let model_optional_user (x: optional_user) = x <> None
